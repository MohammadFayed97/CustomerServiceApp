@page "/customerRequests"

<PageTitle>All Customer Requests</PageTitle>

<a href="/customerRequests/add" class="btn btn-primary">
    Add
    <span class="oi oi-plus"></span>
</a>
<table class="table table-hover">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Customer Name</th>
            <th scope="col">Service Name</th>
            <th scope="col">Transaction Date</th>
            <th scope="col">Operations</th>
        </tr>
    </thead>
    <tbody>
        @if (customerRequests is not null && customerRequests.Any())
        {
            foreach (var customerRequest in customerRequests)
            {
                <tr>
                    <td>@customerRequest.DisplayOrder</td>
                    <td>@customerRequest.CustomerName</td>
                    <td>@customerRequest.ServiceName</td>
                    <td>@customerRequest.TransactionDate</td>
                    <td class="d-flex justify-content-around">
                        <a href="/customerRequests/edit/@customerRequest.Id" title="Edit"><span class="oi oi-pencil"></span></a>
                        <a href="/customerRequests/details/@customerRequest.Id" title="Details"><span class="oi oi-info" aria-hidden="true"></span></a>
                        <a href="/customerRequests/delete/@customerRequest.Id" title="Delete"><span class="oi oi-trash" aria-hidden="true"></span></a>
                    </td>
                </tr>
            }
        }
    </tbody>
</table>

