@page "/login"

@if (showErrors)
{
    <div class="alert alert-danger" role="alert">
            <p>@error</p>
    </div>
}
<EditForm Model="userForLogin" OnValidSubmit="LoginUser" class="card card-body bg-light mt-5">
    <DataAnnotationsValidator />
    <div class="row">
        <div class="form-group">
            <label for="username">UserName:</label>
            <InputText id="username" class="form-control" @bind-Value="userForLogin.UserName" />
            <ValidationMessage For="@(() => userForLogin.UserName)" />
        </div>
        <div class="form-group">
            <label for="password">Password:</label>
            <InputText type="password" id="password" class="form-control" @bind-Value="userForLogin.Password" />
            <ValidationMessage For="@(() => userForLogin.Password)" />
        </div>
    </div>
    <div class="row mt-2">
        <div class="col-md-12">
            <button type="submit" class="btn btn-success">Login</button>
        </div>
    </div>
</EditForm>