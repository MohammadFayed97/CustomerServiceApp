@page "/services"

<PageTitle>All Services</PageTitle>

<a href="/services/add" class="btn btn-primary">
    Add
    <span class="oi oi-plus"></span>
</a>
<table class="table table-hover">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Name</th>
            <th scope="col">Price</th>
            <th scope="col">Operations</th>
        </tr>
    </thead>
    <tbody>
        @if (services is not null && services.Any())
        {
            foreach (var service in services)
            {
                <tr>
                    <td>@service.Id</td>
                    <td>@service.Name</td>
                    <td>@service.Price.ToString("C0")</td>
                    <td class="d-flex justify-content-around">
                        <a href="/services/edit/@service.Id" title="Edit"><span class="oi oi-pencil"></span></a>
                        <a href="/services/details/@service.Id" title="Details"><span class="oi oi-info" aria-hidden="true"></span></a>
                        <a href="/services/delete/@service.Id" title="Delete"><span class="oi oi-trash" aria-hidden="true"></span></a>
                    </td>
                </tr>
            }
        }
    </tbody>
</table>

